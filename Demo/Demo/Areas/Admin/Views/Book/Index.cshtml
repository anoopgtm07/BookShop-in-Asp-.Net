@model List<Book>

<div class="card shadow border-0 my-3">
    <div class="card-header navbar-custom bg-gradient m-lg-0 py-2">
        <div class="row">
            <div class="col-6 text-start">
                <h2 class="text-white py-2">Book List</h2>
            </div>
            <div class="col-6 d-flex justify-content-end">
                <a asp-controller="Book" asp-action="Upsert" class="btn btn-warning text-right">Create New Book</a>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="container">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                       <th>Title</th>
                        <th>ISBN</th>
                        <th>Price</th>
                        <th>Author</th>
                        <th>Category</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td>@obj.Title</td>
                            <td>@obj.ISBN</td>
                            <td>@obj.ListPrice</td>
                            <td>@obj.Author</td>
                            <td></td>
                            <td>
                                <div class="w-=75 btn-group" role="group">
                                    <a asp-controller="Book" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-secondary mx-3">
                                        <i class="bi bi-pencil-square"></i>Edit
                                    </a>
                                    <a asp-controller="Book" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-3">
                                        <i class="bi bi-trash"></i>Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

